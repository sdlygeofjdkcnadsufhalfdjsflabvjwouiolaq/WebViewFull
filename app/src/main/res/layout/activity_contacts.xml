<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="40sp"
                android:id="@+id/contactOptions"
                android:textColor="#FFF"
                android:text="Contact Options"
                android:gravity="center_horizontal"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:id="@+id/pause0"
                android:textColor="#FFF"
                android:layout_below="@+id/contactOptions"
                />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:id="@+id/contact1"
        android:textColor="#FFF"
        android:layout_margin="10dp"
        android:text="@string/app_name"
        android:layout_below="@+id/contactOptions"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:id="@+id/pause1"
                android:textColor="#FFF"
                android:layout_below="@+id/contact1"
                />

            <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:textColor="#FFF"
        android:id="@+id/contact2"
                android:layout_margin="10dp"
        android:layout_below="@+id/pause1"
        android:text="@string/app_name"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:id="@+id/pause2"
                android:textColor="#FFF"
                android:layout_below="@+id/contact2"
                />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:textColor="#FFF"
        android:id="@+id/contact3"
        android:layout_margin="10dp"
        android:layout_below="@+id/pause2"
        android:text="@string/app_name"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:id="@+id/pause3"
                android:textColor="#FFF"
                android:layout_below="@+id/contact3"
                />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:textColor="#FFF"
        android:layout_margin="10dp"
        android:id="@+id/contact4"
        android:layout_below="@+id/pause3"
        android:text="@string/app_name"
        />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
